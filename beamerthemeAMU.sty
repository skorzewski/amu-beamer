% Outer theme

% Title page

\defbeamertemplate*{title page}{AMUBeamer}[1][]
{%
\pgftext[top,left,at=\pgfpoint{3.56cm}{2.2cm}]{%
  {\begin{minipage}{7.8cm}%
    \raggedright%
    \usebeamerfont{institute}\usebeamercolor[fg]{institute}\insertinstitute%
  \end{minipage}}%
}%
\pgftext[top,left,at=\pgfpoint{3.56cm}{1.0cm}]{%
  {\begin{minipage}{7.8cm}%
    \raggedright%
    \usebeamerfont{title}\usebeamercolor[fg]{title}\inserttitle\par%
    \vspace{0.5cm}%
    \usebeamerfont{subtitle}\usebeamercolor[fg]{subtitle}\insertsubtitle\par%
    \ifx\insertdate\@empty%
    \else%
      \vspace{0.5cm}%
      \usebeamerfont{date}\usebeamercolor[fg]{date}\insertdate\par%
    \fi%
  \end{minipage}}%
}%
\pgftext[bottom,left,at=\pgfpoint{3.56cm}{-4.8cm}]{%
  {\begin{minipage}{7.8cm}%
    \raggedright%
    \usebeamerfont{author}\usebeamercolor[fg]{author}\insertauthor\par%
  \end{minipage}}%
}%
\pgftext[base,left,at=\pgfpoint{3.7cm}{-5.6cm}]{%
  \raggedright%
  {\usebeamerfont{text in foot}\usebeamercolor[fg]{text in foot}\insertshortinstitute\par}%
}%
}


